<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title><%= title%></title>
  </head>
  <body>
    <!-- As a heading -->
<nav class="navbar navbar-light bg-primary">
    <span class="navbar-brand mb-0 h1 text-red">DOCLINK</span>
  </nav>

  <div class="container-fluid mt-3">
    <div class="rows">
      <div class="col-md-12 text-center">
        <h1>Formulir</h1>
      </div>
    </div>

  <!--notif-->
<% if (messages.error) { %>
  <div class="alert alert-danger"><%-messages.error %></div>
  <% } %>

  <% if (messages.success) { %>
    <div class="alert alert-success"><%-messages.success %></div>
    <% } %>
    
    <!--TABLE-->
    <div class="row" >
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <%- include('add_modal.ejs') %>
          </div>
          <div class="card-body">
              <table class="table table-responsive" id="dataTable">
              <thead class="thead-dark">
              <tr class="table table-bordered">
                <th>No.</th>
                <th>Nama</th>
                <th>Suhu</th>
                <th>TTL</th>
                <th>Usia</th>
                <th>Jenis Kelamin</th>
                <th>No ktp</th>
                <th>Alamat</th>
                <th>No Hp</th>
                <th>Email</th>
                <th>Keluhan</th>
                <th>Penyakit Penyerta</th>
                <th>Hasil Swab</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i < formulir.length; i++) { %>
              <tr>
                <td><%= (i+1) %></td>
                <td><%= formulir[i].nama %></td>
                <td><%= formulir[i].suhu %></td>
                <td><%= formulir[i].TTL %></td>
                <td><%= formulir[i].usia %></td>
                <td><%= formulir[i].jeniskelamin %></td>
                <td><%= formulir[i].noktp %></td>
                <td><%= formulir[i].alamat %></td>
                <td><%= formulir[i].nohp %></td>
                <td><%= formulir[i].email %></td>
                <td><%= formulir[i].keluhan %></td>
                <td><%= formulir[i].penyakit %></td>
                <td><%= formulir[i].hasil %></td>

                <td>
                  <div class="d-flex">
                    <a href="javascript:void()"
                  data-id="<%= formulir[i].id%>"
                  data-nama="<%= formulir[i].nama%>"
                  data-suhu="<%= formulir[i].suhu%>"
                  data-TTL="<%= formulir[i].TTL%>"
                  data-usia="<%= formulir[i].usia%>"
                  data-jeniskelamin="<%= formulir[i].jeniskelamin%>"
                  data-noktp="<%= formulir[i].noktp%>"
                  data-alamat="<%= formulir[i].alamat%>"
                  data-nohp="<%= formulir[i].nohp%>"
                  data-email="<%= formulir[i].email%>"
                  data-keluhan="<%= formulir[i].keluhan%>"
                  data-penyakit="<%= formulir[i].penyakit%>"
                  data-hasil="<%= formulir[i].hasil%>"

                  class="btn btn-sm btn-info button-update mr-2">Edit</a>

                  <form action="/formulir/delete/<%=formulir[i].id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger" >Hapus</button>
                  </form>
                  </div>  
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  
  <%-include('edit_modal.ejs') %>

  
  <script>
    $("#dataTable").on("click", ".button-update", function(){
      let id = $(this).data("id");
      let nama = $(this).data("nama");
      let suhu = $(this).data("suhu");
      let TTL = $(this).data("TTL");
      let usia = $(this).data("usia");
      let jeniskelamin= $(this).data("jeniskelamin");
      let noktp = $(this).data("noktp");
      let alamat = $(this).data("alamat");
      let nohp = $(this).data("nohp");
      let email = $(this).data("email");
      let keluhan= $(this).data("keluhan");
      let penyakit= $(this).data("penyakit");
      let hasil = $(this).data("hasil");

      

      $("#edit-modal").modal("show");

      $(".id").val(id);
      $(".nama").val(nama);
      $(".suhu").val(suhu);
      $(".TTL").val(TTL);
      $(".usia").val(usia);
      $(".jeniskelamin").val(jeniskelamin);
      $(".noktp").val(noktp);
      $(".alamat").val(alamat);
      $(".nohp").val(nohp);
      $(".email").val(email);
      $(".keluhan").val(keluhan);
      $(".penyakit").val(penyakit);
      $(".hasil").val(hasil);



    })
  </script>
  </body>
</html>